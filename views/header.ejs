<!-- header.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="/css/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
  <nav class="bg-white shadow-md p-4">
    <div class="container mx-auto flex justify-between items-center">
      <a class="text-2xl font-bold text-gray-800" href="/">Exclusive Clubhouse</a>
      <% if (currentUser) { %>
        <span class="text-gray-700">Welcome, <%= currentUser.firstName %>!</span>
      <% } %>
      <div class="space-x-4">
        <% if (currentUser) { %>
          <a href="/new-message" class="text-blue-500 hover:text-blue-700">Create a new message</a>
          <a href="/logout" class="text-red-500 hover:text-red-700">Logout</a>
        <% } else { %>
          <a href="/signup" class="text-blue-500 hover:text-blue-700">Sign Up</a>
          <a href="/login" class="text-blue-500 hover:text-blue-700">Login</a>
        <% } %>
        <% if (currentUser && !currentUser.isMember) { %>
          <a href="/join" class="text-green-500 hover:text-green-700">Join the Club</a>
        <% } %>
        <% if (currentUser && !currentUser.isAdmin) { %>
          <a href="/admin" class="text-purple-500 hover:text-purple-700">Become Admin</a>
        <% } %>
      </div>
    </div>
  </nav>
  <main class="container mx-auto px-4 flex justify-center">
    <div class="bg-white p-4 m-4 rounded shadow-md w-full max-w-md">
      <h2 class="text-3xl font-semibold text-gray-800 mb-4"><%= title %></h2>