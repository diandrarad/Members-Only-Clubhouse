<!-- views/login.ejs -->
<%- include('header') %>
  <form action="/login" method="post">
    <div class="mb-4">
      <label class="block text-gray-700">Email: <input type="email" name="email" class="mt-1 p-2 w-full border rounded" required></label>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700">Password: <input type="password" name="password" class="mt-1 p-2 w-full border rounded" required></label>
    </div>
    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">Login</button>
  </form>
  <% if (error) { %>
    <p><%= error %></p>
  <% } %>
  <%- include('footer') %>